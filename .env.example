# ============================================================================
# AGENT CREATION & EVALUATION CONFIGURATION
# ============================================================================

# Azure AI Project Endpoint (REQUIRED)
# Example: https://your-project.eastus.services.ai.azure.com/api/projects/your-project
AZURE_AI_PROJECT_ENDPOINT=https://agents-testing-resource.services.ai.azure.com/api/projects/agents-testing

# Model Deployment Name (REQUIRED)
# Example: gpt-4o, gpt-4, gpt-35-turbo
AZURE_DEPLOYMENT_NAME=gpt-4o

# ============================================================================
# AZURE AUTHENTICATION
# ============================================================================
# For GitHub Actions (Federated Credentials) and Evaluations
AZURE_CLIENT_ID=your-azure-client-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_AI_PROJECT_NAME=your-project-name  # The actual project/workspace name in Azure (not from URL)

# ============================================================================
# AGENT IDS (Auto-populated after agent creation)
# ============================================================================
AGENT_ID_BASELINE=your-baseline-agent-id
AGENT_ID_VARIANT1=your-variant1-agent-id
AGENT_ID_VARIANT2=your-variant2-agent-id

# ============================================================================
# GENAI EVALUATION CONFIGURATION
# ============================================================================

# Azure OpenAI Configuration (for GenAI Evaluations)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ============================================================================
# ADDITIONAL CONFIGURATION
# ============================================================================

# Evaluation Configuration
EVALUATION_RESULT_VIEW=default  # Options: default, all-scores, raw-scores-only
API_VERSION=2024-08-01-preview

# GitHub Models Configuration (Alternative for evaluation judges)
GITHUB_TOKEN=your-github-token
GITHUB_MODEL_ENDPOINT=https://models.github.ai/inference